{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
    "noEmit": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
